# LuchaFit Frontend - .htaccess
# Este archivo va en /public_html/luchafit/.htaccess

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /luchafit/

  # No reescribir archivos estáticos (JS, CSS, imágenes, fuentes)
  RewriteCond %{REQUEST_URI} \.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$ [NC]
  RewriteRule ^(.*)$ - [L]

  # No reescribir la carpeta API (backend)
  RewriteCond %{REQUEST_URI} ^/luchafit/api/ [NC]
  RewriteRule ^(.*)$ - [L]

  # No reescribir archivos que existen físicamente
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Redirigir todo lo demás al index.html (React Router - SPA)
  RewriteRule ^(.*)$ /luchafit/index.html [L]
</IfModule>

# Cache control para assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
</IfModule>

# Comprimir archivos
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/json
</IfModule>

# Seguridad
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Tipos MIME
AddType application/javascript .js
AddType text/css .css
